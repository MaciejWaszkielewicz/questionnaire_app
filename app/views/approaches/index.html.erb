<div class="row">
  <div class="col">
    <div class="card">
      <div class="card-header">
        <h1 class="text-center"><%= @survey.title %></h1>
        <h4 class="text-center">All approaches</h4>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col"></div>
          <div class="col-xl-4 col-lg-6 col-md-8 col-sm-12 col-xs-12">
            <% @approaches.each do |approach| %>
              <p>
                <%= approach.id %>
                <%= link_to "Show", survey_approach_path(@survey, approach), class: "btn btn-sm btn-primary" %>
                <%= link_to "Destroy", survey_approach_path(@survey, approach), method: :delete, class: "btn btn-sm btn-danger" %>
              </p>
            <% end %>
          </div>
          <div class="col"></div>
        </div>
      </div>
    </div>
  </div>
</div>