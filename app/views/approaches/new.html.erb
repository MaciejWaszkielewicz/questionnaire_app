<div class="row">
  <div class="col">
    <div class="card">
      <div class="card-header">
        <h1 class="text-center"><%= @survey.title %></h1>
        <% if @section.title.present? %>
          <h4 class="text-center"><%= @section.title %></h4>
        <% end %>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col"></div>
          <div class="col-xl-4 col-lg-6 col-md-8 col-sm-12 col-xs-12">
            <%= render partial: "approaches/form/approach", locals: { section: @section, approach: @approach } %>
          </div>
          <div class="col"></div>
        </div>
      </div>
    </div>
  </div>
</div>